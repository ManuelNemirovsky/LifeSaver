<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.lifesaver.Age"
    android:background="@color/niceGreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="330dp"
        android:id="@+id/buttonsHolder"
        android:gravity="center"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Enter Your Age Range"
            android:id="@+id/tvAge"
            android:textSize="20dp"
            android:layout_below="@+id/textHolder"
            android:layout_alignStart="@+id/buttonsHolder"
            android:textStyle="normal|bold|italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-6"
            android:id="@+id/btnBaby"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-12"
            android:id="@+id/btnKids"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-20"
            android:id="@+id/btnTeen"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-40"
            android:id="@+id/btnGrown"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60+"
            android:id="@+id/btnOld"
            android:background="@drawable/rounded_corner" />

    </LinearLayout>

</RelativeLayout>
